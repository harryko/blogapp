
<h2>Listing Articles</h2>
<%= link_to 'New Article', new_article_path %> | <%= link_to 'Home', 'welcome/index' %>
<p>
	<%#= f.select :articles, ["gmail","yahoo","msn"]%>
<p>

<table id="list_table">
  <tr>
    <th align='left'>Title</th>
    <th align='left'>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td class="ex2"><%= article.title %></td>
      <td class="ex3"><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>         
    </tr>
  <% end %>
</table>

<h3>Article Count: <%= Article.all.count %></h3>